.App
  position absolute
  width 100%
  height 100%
  overflow hidden
  background-color bg-color-dark
  color text-color
  font-family Helvetica, Arial, sans-serif
  z-index 1

  > #midcol
    abspos 0px 0px 0px 50%

    > .DateNav
      padding 40px 0 40px 0
      abspos 0px false false -455px
