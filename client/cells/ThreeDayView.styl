@import 'mixins/colors';
@import 'mixins/border';
@import 'mixins/box';
@css{ @import url(http://fonts.googleapis.com/css?family=Droid+Sans:bold); }

.ThreeDayView
  text-align center
  > .day
    box-shadow 0px 1px 5px shadow-color
    border-radius 3px
    width 400px
    background-color bg-color
    margin 10px auto 10px
    padding 10px
    vertical-align top

    > .showTable
      border-collapse collapse
      text-align left
      width 100%

      > thead > tr > td
        &.header
          font bold 20px 'Droid Sans', sans-serif
          color text-color-dark
          padding 5px 0 5px 5px
          border-bottom 1px solid bg-selected-color-dark
          letter-spacing 2px
          text-shadow 0px 1px 1px shadow-color

      > tbody > tr
        &:nth-child(2n)
          background-color bg-color - #060606

        > td
          vertical-align middle
          padding 5px
          height 30px
          
          &.time
            font-size 12px
            color text-color-dark
            width 50px

            > .ampm
              font-size 9px

          &.network
            font-size 10px
            color text-color-dark
            width 35px

