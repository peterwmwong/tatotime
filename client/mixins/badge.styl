@import 'mixins/box';
@import 'mixins/gradient';
@import 'mixins/pos';

badge-red = #F50400
badge-yellow = #EBB000
badge-gray = #404040
badge-green = #6FBF00

badge(bcolor)
  color #FFF
  display inline-block
  font-size 14px
  font-weight bold
  position relative
  text-align center
  text-shadow 0px 1px 1px #000
  z-index 2

  &:after
    abspos 3px 0px 4px 0px
    content ""
    gradient rgba(bcolor,.3) rgba(bcolor,.8) 0% 70%
    border-radius 3px
    box-shadow inset 0px 1px 2px rgba(0,0,0,.7)
    z-index -1

